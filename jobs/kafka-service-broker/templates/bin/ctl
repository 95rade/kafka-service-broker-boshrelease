#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/kafka-service-broker/helpers/ctl_setup.sh 'kafka-service-broker'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

export JAVA_HOME=/var/vcap/packages/kafka-service-broker/jdk
export JAVA_OPTS="-Xms256m -Xmx1024m"

export DATA_DIR=/var/vcap/data/kafka-service-broker

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    echo "[start] About to starting broker"
    ensure_no_more_tomcat

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    # We want to keep packages pristine, since tomcat is modified in place we stage it elsewhere.
    rm -rf $DATA_DIR/tomcat
    mkdir -p $DATA_DIR
    cp -a /var/vcap/packages/kafka-service-broker/tomcat $DATA_DIR
    cp -a /var/vcap/jobs/kafka-service-broker/config/tomcat/* $DATA_DIR/tomcat/conf/

    chown -R vcap:vcap $DATA_DIR

    export JAVA_OPTS="-DPID=$$ -Dsun.net.inetaddr.ttl=60 -Dnetworkaddress.cache.ttl=60"
    export CATALINA_OPTS="<%= p('catalina_opts') %>"

    cd /var/vcap/data/kafka-service-broker
    echo "[start] Calling Tomcat start up command"
    exec chpst -u vcap:vcap tomcat/bin/catalina.sh run
    echo "[start] Tomcat start up in progress"

    exec chpst -u vcap:vcap kafka-service-broker \
         >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE
    ensure_no_more_tomcat

    ;;
  *)
    echo "Usage: ctl {start|stop}"

    ;;

esac
exit 0
