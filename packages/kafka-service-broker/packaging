set -e -x

cd ${BOSH_INSTALL_TARGET}
mkdir jdk && tar zxvf ${BOSH_COMPILE_TARGET}/openjdk/openjdk-*-trusty.tar.gz -C jdk
if [[ $? != 0 ]] ; then
  echo "Cannot unpack JDK"
  exit 1
fi

# latest JDK release didn't have correct permissions
chmod -R a+r jdk

cd ${BOSH_INSTALL_TARGET}

tar zxvf ${BOSH_COMPILE_TARGET}/tomcat/apache-tomcat-8.0.39.tar.gz
if [[ $? != 0 ]] ; then
  echo "Cannot unpack Tomcat"
  exit 1
fi

mv apache-tomcat-* tomcat

cd tomcat
rm -rf webapps/*

ls -al ${BOSH_COMPILE_TARGET}/kafka-service-broker/**/*

cp -a ${BOSH_COMPILE_TARGET}/kafka-service-broker/kafka-broker/target/kafka-broker.jar .
# cp -a ${BOSH_COMPILE_TARGET}/kafka-service-broker/kafka-broker/target/kafka-broker.jar webapps/
